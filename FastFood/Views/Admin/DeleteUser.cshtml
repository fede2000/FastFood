@model UserViewModel
@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
	ViewBag.Title = "Delete User";
}

<div class="pcoded-inner-content pt-8">
	<div class="main-body">
		<div class="page-wrapper">
			<div class="page-body">
				<div class="row">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-header">
								<div class="card-header">
								</div>
								<div class="card-block">
									<div class="row">

										<div class="col-sm-6 col-md-8 col-lg-8 mobile-inputs">
											<h2 class="sub-title">Eliminar Usuario</h2>
											<div class="card-block table-border-style">
												<h4>¿Estas Seguro que quieres eliminar este Usuario?</h4>
												<div class="table-responsive">
													<table class="table table-striped table-hover">
														<thead>
															<tr>
																<th>Nombre</th>
																<th>Username</th>
																<th>Email</th>
															
																<th>Creación</th>
															</tr>
														</thead>
														<tbody>
															<tr>
																<td>@Model.NewUser.Name</td>
																
																<td>@Model.NewUser.UserName</td>
																<td>@Model.NewUser.Email</td>
																
																<td>@Model.NewUser.CreatedDate.ToLongDateString()</td>
															</tr>
														</tbody>
													</table>

													<form asp-action="DeleteUser" method="post">
														<input type="hidden" asp-for="NewUser.UserId" />
														<button type="submit" class="btn btn-danger">Delete</button>
														<a asp-action="User" class="btn btn-secondary">Cancel</a>
													</form>

												</div>
											</div>
										</div>


									</div>
								</div>

							</div>

						</div>

					</div>

				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}