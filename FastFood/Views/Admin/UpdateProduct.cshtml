@model ProductViewModel
@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
	ViewBag.Title = "Edit Category";
}

<div class="pcoded-inner-content pt-8">
	<div class="main-body">
		<div class="page-wrapper">
			<div class="page-body">
				<div class="row">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-header">
								<div class="card-header">
								</div>
								<div class="card-block">
									<div class="row">
										<div class="col-sm-6 col-md-1 col-lg-4">
											<h2>Edit Product</h2>

											<form asp-action="UpdateProduct" method="post" enctype="multipart/form-data">
												<input type="hidden" asp-for="NewProduct.ProductId" />
												<div class="form-group">
													<label asp-for="NewProduct.Name" class="control-label"></label>
													<input asp-for="NewProduct.Name" class="form-control" />
													<span asp-validation-for="NewProduct.Name" class="text-danger"></span>
												</div>
												<div class="form-group">
													<label asp-for="NewProduct.ImageFile" class="control-label"></label>
													<input type="file" asp-for="NewProduct.ImageFile" class="form-control-file" />
													<span asp-validation-for="NewProduct.ImageFile" class="text-danger"></span>
												</div>
												<div class="form-group">
													<label asp-for="NewProduct.Description" class="control-label">Descripción del Producto</label>
													<input asp-for="NewProduct.Description" type="text" class="form-control" id="Name" aria-describedby="Name" maxlength="100">
													<span asp-validation-for="NewProduct.Description" class="text-danger"></span>
												</div>
												<div class="form-group">
													<label asp-for="NewProduct.Price" class="control-label">Precio del Producto</label>
													<input asp-for="NewProduct.Price" type="text" class="form-control" id="Name" aria-describedby="Name" maxlength="100">
													<span asp-validation-for="NewProduct.Price" class="text-danger"></span>
												</div>
												<div class="form-group">
													<label asp-for="NewProduct.Quantity" class="control-label">Stock del Producto</label>
													<input asp-for="NewProduct.Quantity" type="text" class="form-control" id="Name" aria-describedby="Name" maxlength="100">
													<span asp-validation-for="NewProduct.Quantity" class="text-danger"></span>
												</div>
												<div class="form-group">
													<label for="CategoryId" asp-for="NewProduct.CategoryId" class="control-label">Categoria del Producto</label>
													<select asp-for="NewProduct.CategoryId" class="form-control" id="CategoryId">
														<option value="">Seleccione una categoría</option>
														@foreach (var category in Model.Categories)
														{
															<option value="@category.CategoryId">@category.Name</option>
														}
													</select>
													<span asp-validation-for="NewProduct.CategoryId" class="text-danger"></span>
												</div>
												<div class="form-group">
													<input asp-for="NewProduct.IsActive" type="checkbox" class="form-check-input" id="IsActive" aria-describedby="IsActive">
													<label asp-for="NewProduct.IsActive" for="IsActive" class="control-label">Habilitada</label>
													
													<span asp-validation-for="NewProduct.IsActive" class="text-danger"></span>
												</div>
												<button type="submit" class="btn btn-primary">Save Changes</button>
											</form>
										</div>

									</div>
								</div>

							</div>

						</div>

					</div>

				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}